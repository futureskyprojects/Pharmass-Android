<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlHomeMenuRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2000000"
    android:clickable="true"
    android:focusable="true"
    tools:context=".component.inventory_limit_options_picker.InventoryLimitOptionPickerActivity">

    <ImageView
        android:id="@+id/ivCloseButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@id/lnMenuContainer"
        android:layout_centerInParent="true"
        android:background="@drawable/button_style_white_round"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:id="@+id/lnMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_bottom_sheet_white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTheHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/padding"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Chọn bộ lọc định sẵn"
            android:textColor="#424242"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lnMainOptionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="@dimen/padding"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding">

            <Button
                android:id="@+id/btnOutOfStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_style_info_gradient"
                android:padding="22.5dp"
                android:text="Sản phẩm hết hàng"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnUnderLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_style_info_gradient"
                android:padding="22.5dp"
                android:text="Sản phẩm sắp hết"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAboveLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_style_info_gradient"
                android:padding="22.5dp"
                android:text="Sản phẩm tồn nhiều"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_style_info_gradient"
                android:padding="22.5dp"
                android:text="Trong ngưỡng"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>