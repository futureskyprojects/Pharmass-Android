<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="1000">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="15dp" />
            <gradient android:angle="0" android:endColor="#FF4B2B" android:startColor="#FF416C" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="15dp" />
            <gradient android:angle="0" android:endColor="#D2FF416C" android:startColor="#D2FF416C" />
        </shape>
    </item>
</selector>